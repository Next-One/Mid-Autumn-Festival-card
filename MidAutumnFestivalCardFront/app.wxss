  background: linear-gradient(135deg, #e687ee, #a34ae0);
}

.line-bg-2 {
  background: linear-gradient(135deg, #fd98ba, #f95385);
}

.line-bg-3 {
  background: linear-gradient(135deg, #75e4d7, #32a8d7);
}

.line-bg-4 {
  background: linear-gradient(135deg, #ffa05e, #ff4d32);
}

.line-bg-5 {
  background: linear-gradient(135deg, #f48173, #f42221);
}

.line-bg-6 {
  background: linear-gradient(135deg, #9fe431, #52d11c);
}

.line-bg-7 {
  background: linear-gradient(135deg, #cde7b0, #b8f422);
}
