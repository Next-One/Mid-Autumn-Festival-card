/* 子元素水平垂直居中,纵向排列 */

.fcc {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

/* 子元素水平垂直居中,横向排列 */

.frc {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.frc-s {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.fcc-one {
  display: flex;
  justify-content: center;
  align-items: center;
}
.frj{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-direction: row;
}
.stff {
  font-family: 'STXingkai', 'Microsoft Yahei', Tahoma, Helvetica, Arial, sans-serif;
}

/* 渐变色背景代替纯色背景 */

