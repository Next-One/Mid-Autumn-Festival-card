@import "/util/wxss/theme_item.wxss";
@import "/util/wxss/base64.wxss";

.swiper-tab {
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  position: relative;
  color: #999;
  background: rgb(43, 38, 34);
  border: 1rpx #444 solid;
}

.line-h {
  height: 100rpx;
  position: absolute;
  width: 2rpx;
  z-index: 99;
  top: 0;
  left: 50%;
  background: #444;
}

.swiper-tab-item {
  width: 374rpx;
  position: relative;
}

.tab-bg {
  border: 2rpx #999 solid;
  width: 56rpx;
  height: 56rpx;
  border-radius: 28rpx;
  margin-right: 20rpx;
}

.send-bg {
  background-size: cover;
}

.receive-bg {
  background-size: 32rpx 32rpx;
  background-repeat: no-repeat;
  background-position: center;
}

.active-line {
  position: absolute;
  bottom: 0;
  width: 48%;
  height: 6rpx;
  background-color: rgb(17, 130, 209);
  left: 1%;
  transition: left 0.5s;
  -webkit-transition: left 0.5s;
}

.active {
  left: 51%;
}

.content-wrap, page {
  width: 100%;
  height: 100%;
}

.list {
  padding: 16rpx;
}

.item-friend-name-2, .item-said-2 {
  max-width: 300rpx;
  overflow: hidden;
  padding-left: 48rpx;
  position: relative;
  height: 80rpx;
  line-height: 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-info-wrap {
  width: 100%;
  height: 184rpx;
  overflow: hidden;
  position: relative;
  padding: 20rpx 0;
}

.userinfo-bg {
  position: absolute;
  z-index: -99;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 224rpx;
}

.user-info {
  padding: 20rpx;
  color: #fff;
  position: relative;
}

.user-avatar-wrap, .user-avatar-img {
  width: 128rpx;
  height: 128rpx;
  border-radius: 8rpx;
}

.user-avatar-wrap {
  border: 4rpx #fff solid;
  position: relative;
}

.user-name, .user-id {
  position: relative;
  padding: 0 0 0 60rpx;
}

.user-name {
  font-size: 28rpx;
  line-height: 72rpx;
  height: 72rpx;
}

.user-id {
  line-height: 56rpx;
  height: 56rpx;
  font-size: 24rpx;
}

.icon-avatar {
  position: absolute;
  bottom: -16rpx;
  right: -16rpx;
  width: 36rpx;
  height: 32rpx;
  background-size: cover;
}

.user-info-content {
  margin: 0 0 0 20rpx;
}

.user-level {
  justify-content: center;
  position: absolute;
  bottom: 28rpx;
  right: 40rpx;
}

.level-tip {
  width: 32rpx;
  height: 32rpx;
  background-size: cover;
}

.ava-tip {
  background-image: url("data:image/svg+xml;base64,");
  background-size: cover;
  top: 16rpx;
  left: 8rpx;
}

.id-tip {
  top: -4rpx;
  left: 12rpx;
}

.id-tip, .ava-tip {
  height: 40rpx;
  width: 40rpx;
  position: absolute;
}

.setting-userinfo {
  position: absolute;
  width: 90rpx;
  top: 40rpx;
  right: 30rpx;
  background-image: url(data:image/svg+xml;base64,);
  background-repeat: no-repeat;
  background-position: 90% 56%;
  background-size: 26rpx 26rpx;
}
