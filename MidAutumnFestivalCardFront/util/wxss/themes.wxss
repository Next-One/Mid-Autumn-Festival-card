page, .ani-list-bg {
  width: 100%;
  height: 100%;
}

.card-area {
  width: 322px;
  overflow: hidden;
  margin: 0 auto;
  position: relative;
  height: 486px;
}

.ani-list-item {
  position: absolute;
}

.year-text {
  font-size: 12px;
  color: rgb(245, 222, 122);
  width: 50px;
  height: 20px;
  transform: rotate(90deg);
  margin: 20px -16px;
}

.day-tip {
  color: rgb(255, 236, 75);
  font-size: 20px;
  text-align: center;
  width: 136px;
}

.bottom-tip-txt {
  text-align: center;
  color: rgb(181, 37, 29);
  font-size: 12px;
  width: 310px;
  height: 38px;
  letter-spacing: 3px;
}


