.list-wrap {
  padding: 0 10rpx;
  margin: 10rpx 0;
}

.list-item {
  padding: 8rpx 0 8rpx 10rpx;
  border: 1rpx #eee solid;
  position: relative;
}

.item-image-wrap {
  padding: 8rpx;
  border-radius: 8rpx;
  border: 1px #eee solid;
}

.item-image-wrap, .item-image {
  width: 140rpx;
  height: 140rpx;
}

.item-content {
  padding: 10rpx;
  max-width: 440rpx;
  overflow: hidden;
}

.friend-name {
  font-size: 32rpx;
  color: #333;
  line-height: 80rpx;
  height: 80rpx;
}

.said {
  font-size: 28rpx;
  color: #999;
  height: 50rpx;
  line-height: 50rpx;
}

.no-wrap {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  width: 420rpx;
}

.name-bg, .said-bg {
  background-size: cover;
  margin-right: 20rpx;
}

.name-bg {
  width: 32rpx;
  height: 32rpx;
}

.said-bg {
  width: 30rpx;
  height: 30rpx;
}

.edit-tip {
  position: absolute;
  top: 80rpx;
  right: 20rpx;
  width: 36rpx;
  height: 36rpx;
  background-size: cover;
  background-image: url(data:image/svg+xml;base64,);
}

.empty {
  height: 800rpx;
  background: rgb(248, 244, 244);
}

.empty-bg {
  height: 240rpx;
  width: 240rpx;
  background-size: cover;
  margin: 0 0 40rpx;
}

.empty-content {
  color: #999;
}

.empty-link {
  color: #00b3ed;
  margin: 20rpx 0 0;
}

.form-who {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  color: #aaa;
}

.min-avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 4rpx;
}

.send-name-wrap {
  margin: 0 16rpx;
}

.send-name {
  color: #333;
}
