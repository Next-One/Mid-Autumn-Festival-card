/* 祝福语3 */

.zfy3-wrap {
  position: absolute;
  left: 30px;
  top: 80px;
}

.zfy3-wrap .shu-text {
  width: 160px;
  height: 160px;
  font-size: 26rpx;
  color: rgb(181, 37, 29);
  overflow: hidden;
  display: flex;
  text-align: left;
  animation: zfy3-width-add 2s linear 2s 1 normal both running;
}

.zfy3-wrap .ch-text {
  font-size: 32rpx;
  overflow: hidden;
  letter-spacing: 4px;
  display: inline-block;
  max-width: 40rpx;
  writing-mode: vertical-lr;
}

.zfy3-wrap .content-text {
  display: inline-block;
  line-height: 28px;
  padding: 28px 0 0 10px;
  letter-spacing: 2px;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.2);
  writing-mode: vertical-lr;
}

@keyframes zfy3-width-add {
  0% {
    opacity: 0;
    width: 0;
  }

  100% {
    opacity: 1;
    width: 160px;
  }
}
