.zfy1-wrap {
  position: absolute;
  left: 80px;
  top: 260px;
}

.zfy1-wrap .heng-text {
  width: 180px;
  height: 180px;
  font-size: 12px;
  color: rgb(245, 222, 122);
  overflow: hidden;
  animation: wfy1-height-add 3s linear 3.5s 1 normal both running;
}

.zfy1-wrap .content-text {
  letter-spacing: 2px;
  line-height: 18px;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.2);
  text-indent: 28px;
}

.zfy1-wrap .ch-text {
  font-size: 16px;
  overflow: hidden;
  letter-spacing: 4px;
  max-height: 20px;
}

@keyframes wfy1-height-add {
  0% {
    opacity: 0.8;
    height: 0;
  }

  100% {
    opacity: 1;
    height: 180px;
  }
}

