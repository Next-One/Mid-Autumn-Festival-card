<view class='btn-group frj share-group' wx:if='{{share}}'>
  <view class='btn-wrap first-min-btn'>
    <button class='min-btn' type="primary" plain='true' size='default' bindtap='toIndex'>去抽贺卡</button>
  </view>
  <view class='btn-wrap'>
    <button size='default' plain='true' class="txt-border min-btn" bindtap='refreshView'>再看一次</button>
  </view>
</view>
<view class='btn-group frj send-group' wx:else>
  <view class='btn-wrap'>
    <button class='min-btn txt-border' plain='true' size='default' bindtap='edit'>编 辑</button>
  </view>
  <view class='btn-wrap'>
    <button size='default'  type="primary" plain='true' class=" min-btn" open-type='share'>分 享</button>
  </view>
   <view class='btn-wrap'>
    <button size='default' plain='true' class="txt-border min-btn" bindtap='friendQuan'>保存</button>
  </view>
</view>